<%- include("./header.ejs") %>
  <!--slider start-->
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="image/slide1.webp" class="d-block w-100 " alt="...">

      </div>
      <div class="carousel-item">
        <img src="image/slide5.webp" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="image/slide3.webp" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!--slider end-->





  <!--course registration page start-->
  <div class="container-fluid mt-0" style="background-color: #006690; width: 100%; height: 80vh;">

    <div class="container p-1">
      <h2 class="bg-black text-light text-center mt-3 p-1">Our Programmes</h2>
      <div class="row">
        <div class="col-md-4 mt-3">
          <div class="card bg-black text-light">
            <div class="card-body ">
              <center>
                <h1>B-Tech</h1>
                <p>B Tech or Bachelor of Technology is a 4-year undergraduate academic degree program
                </p>
                <% if(btech) { %>
                  <a href="/courseDisplay" class="btn btn-light" style="color: white; background-color: #006690;">
                    Course Display</a>
                  <% } else { %>
                    <button class="btn btn-light" style="color: white; background-color: #006690;"
                      data-bs-toggle="modal" data-bs-target="#btech">Register</button>

                    <% } %>

              </center>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-3">
          <div class="card bg-black text-light">
            <div class="card-body ">
              <center>
                <h1>BCA</h1>
                <p>BCA or Bachelor of computer application is a 3-year undergraduate academic degree program
                </p>
                <button class="btn btn-light" style="color: white; background-color: #006690; ">Register</button>

              </center>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-3">
          <div class="card bg-black text-light">
            <div class="card-body ">
              <center>
                <h1>B.Sc-IT</h1>
                <p>B.Sc-IT or Bachelor of science is a 3-year undergraduate academic degree program
                </p>
                <button class="btn btn-light" style="color: white; background-color: #006690; ">Register</button>

              </center>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-3">
          <div class="card bg-black text-light">
            <div class="card-body ">
              <center>
                <h1>M-tech</h1>
                <p>M Tech or Master of Technology is a 2-year postgraduate academic degree program
                </p>
                <button class="btn btn-light" style="color: white; background-color: #006690; ">Register</button>

              </center>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-3">
          <div class="card bg-black text-light">
            <div class="card-body ">
              <center>
                <h1>MCA</h1>
                <p>MCA or Master of computer application is a 2-year postgraduate academic degree program
                </p>
                <button class="btn btn-light" style="color: white; background-color: #006690; ">Register</button>

              </center>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-3">
          <div class="card bg-black text-light">
            <div class="card-body ">
              <center>
                <h1>M.Sc-IT</h1>
                <p>M.Sc-IT or Master of science is a 2-year postgraduate academic degree program
                </p>
                <button class="btn btn-light" style="color: white; background-color: #006690; ">Register</button>

              </center>
            </div>
          </div>
        </div>

      </div><!--row end-->
    </div><!--container end-->


  </div>
  <!--course registration page end-->

  <!--btech model-->
  <!-- Btech modal -->
  <div class="modal fade" id="btech">
    <div class="modal-dialog modal-md card">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title ">Registration form</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <!-- modal header ends -->
        <div class="modal-body">
          <h4 class="text-center bg-dark text-white">B.Tech</h4>
          <form action="/CourseInsert" method="post" enctype="multipart/form-data">
            <div class="mb-2">
              <label for="">Name</label>
              <input type="text" name="name" value="<%= name %>" id="" class="form-control" autocomplete="off" required>
            </div>
            <div class="mb-2">
              <label for="">Email</label>
              <input type="email" name="email" value="<%= email %>" id="" placeholder="abc@gmail.com"
                class="form-control" autocomplete="off" required>
            </div>
            <div class="mb-2">
              <label for="">Mobile no</label>
              <input type="number" name="phone" id="" class="form-control" autocomplete="off" required>
            </div>
            <div class="mb-2">
              <label for="">D.O.B</label>
              <input type="date" name="dob" id="" class="form-control" autocomplete="off" required>
            </div>
            <div class="mb-2">
              <label for="">Address</label>
              <textarea name="address" id="" class="form-control" autocomplete="off" required></textarea>
            </div>
            <div class="mb-2">
              <label for="">Gender</label>
              <select name="gender" id="" class="form-control" autocomplete="off" required>
                <option value="">select</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Others">Others</option>
              </select>

            </div>
            <div class="mb-2">
              <label for="">Education</label>
              <select name="education" id="" class="form-control" autocomplete="off" required>
                <option value="">Select</option>
                <option value="Graduation">Graduation</option>
              </select>
            </div>
            <div class="mb-2">
              <label for="">Course</label>
              <input type="text" name="course" id="" value="B.Tech" class="form-control" readonly autocomplete="off"
                required>
            </div>
            <div class="mb-2">
              <button class="btn btn-info text-center" type="submit">Submit</button>
            </div>
          </form>
        </div><!--modal body ends-->
      </div><!--model content-->
    </div><!--model dialog end-->
  </div><!--model fade end-->
  <%-include("./footer.ejs") %>